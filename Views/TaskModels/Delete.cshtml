@model TaskManagementApp.Models.TaskModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Task Details</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Title)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Description)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.DueDate)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.DueDate)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.status)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.status)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Remarks)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Remarks)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.CreatedOn)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedOn)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.UpdatedOn)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.UpdatedOn)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.CreatedByName)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedByName)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.CreatedById)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedById)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.UpdatedByName)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.UpdatedByName)</dd>

                <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.UpdatedById)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.UpdatedById)</dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            <form asp-action="Delete" class="d-inline">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger me-2">
                    <i class="bi bi-trash"></i> Delete
                </button>
            </form>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>

<!-- Optional: Add some custom hover effect -->
<style>
    .card {
        transition: transform 0.2s ease-in-out;
    }

        .card:hover {
            transform: scale(1.01);
        }
</style>

